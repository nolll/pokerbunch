@model Web.Models.CashgameModels.Toplist.ToplistTableModel

<table class="sortable-table table-list" data-require="sortable-table" data-sort-control-container="sort-control-container">
    <thead>
        <tr>
            <th class="base-column"></th>
            <th class="base-column"><span>Player</span></th>
            @Html.Partial("Toplist/ToplistTableColumn", Model.ColumnsModel.ResultColumn)
            @Html.Partial("Toplist/ToplistTableColumn", Model.ColumnsModel.BuyinColumn)
            @Html.Partial("Toplist/ToplistTableColumn", Model.ColumnsModel.CashoutColumn)
            @Html.Partial("Toplist/ToplistTableColumn", Model.ColumnsModel.TimePlayedColumn)
            @Html.Partial("Toplist/ToplistTableColumn", Model.ColumnsModel.GamesPlayedColumn)
            @Html.Partial("Toplist/ToplistTableColumn", Model.ColumnsModel.WinRateColumn)
        </tr>
    </thead>
    <tbody class="list">
        @foreach(var itemModel in Model.ItemModels)
        {
            @Html.Partial("Toplist/ToplistTableItem", itemModel)
        }
    </tbody>
</table>