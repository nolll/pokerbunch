@model Web.Models.PlayerModels.Facts.PlayerFactsModel

<h2>Player Facts</h2>

<dl class="value-list">
    <dt class="label">Total result</dt>
    <dd>@Model.Winnings</dd>
    <dt class="label">Best result</dt>
    <dd>@Model.BestResult</dd>
    <dt class="label">Worst result</dt>
    <dd>@Model.WorstResult</dd>
    <dt class="label">Games played</dt>
    <dd>@Model.GamesPlayed</dd>
    <dt class="label">Time played</dt>
    <dd>@Model.TimePlayed</dd>
    <dt class="label">Total Wins</dt>
    <dd>@Model.BestResultCount</dd>
    <dt class="label">Winning Streak</dt>
    <dd>@Model.WinningStreak</dd>
    <dt class="label">Losing Streak</dt>
    <dd>@Model.LosingStreak</dd>
</dl>