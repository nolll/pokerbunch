@using System.Web.Optimization
@model Web.Models.PageBaseModels.IPageModel
<!DOCTYPE html>
<html lang="en">

    <head>
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />        <meta http-equiv="Content-Language" content="en" />
        <meta name="description" content="" />
        <meta name="author" content="">
        <meta name="keywords" content="" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        @Styles.Render(@Model.PageProperties.CssUrl)
        @* <link href="@Model.PageProperties.CssUrl" rel="stylesheet" /> *@
        <link rel="shortcut icon" href="/favicon.ico" />
        <title>@Model.BrowserTitle</title>
    </head>

    <body>

        <div class="wrap">

            <header class="page-header">
                <div class="content">
                    <div class="logo"><a href="/"><span class="logo-top">Poker</span> <span class="logo-bottom">Bunch</span></a></div>
                    @if (Model.PageProperties.HomegameNavModel != null)
                    {
                        @Html.Partial("~/Views/Navigation/HomegameNavigation.cshtml", Model.PageProperties.HomegameNavModel)
                    }
                </div>
            </header>
            
            <div class="main container">
                @RenderBody()
            </div>
            
            @Html.Partial("~/Views/Navigation/Navigation.cshtml", Model.PageProperties.UserNavModel)
		
        </div>
        
        <!--[if lt IE 9]>
            <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
            <script src="/FrontEnd/js/lib/respond.min.js"></script>
        <![endif]-->
        <script data-main="/FrontEnd/js/require.config.loader" src="/FrontEnd/js/lib/require-2.1.2-jquery-1.8.2.min.js"></script>
        
        @Html.Partial("~/Views/Misc/GoogleAnalytics.cshtml", Model.PageProperties.GoogleAnalyticsModel)

    </body>

</html>

<!-- version: @Model.PageProperties.Version -->