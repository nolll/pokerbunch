@using Web.Models.PageBaseModels
@model Web.Models.PlayerModels.Details.PlayerDetailsPageModel

@{
    Layout = PageLayout.TwoColumns;
}

<div class="block gutter">
    <h1 class="page-heading">@Model.DisplayName</h1>
</div>
<div class="block gutter">
    @Html.Partial("PlayerDetails/PlayerFacts", Model.PlayerFactsModel)
    @Html.Partial("PlayerDetails/PlayerBadges", Model.PlayerBadgesModel)
    
    @if (Model.DeleteEnabled)
    {
        <p>
            <a href="@Model.DeleteUrl" class="button warning" data-require="delete-confirmation" data-message="Delete Player?">Delete</a>
        </p>
    }
</div>
@section Aside2{
	<div class="block gutter">
		@if (Model.ShowUserInfo){
            @Html.Partial("~/Views/Misc/Avatar.cshtml", Model.AvatarModel)
			<p>
				<a href="@Model.UserUrl" class="button">User Profile</a>
			</p>
		} else {
			<p>
				<a href="@Model.InvitationUrl" class="button">Invite User</a>
			</p>
		}
	</div>
}