@model Web.Models.CashgameModels.Matrix.CashgameMatrixTableModel
  
<div class="matrix-container">
    <table class="cashgames matrix table-list">
        <thead>
		    <tr>
			    <th class="title"></th>
			    <th class="title"><span>Player</span></th>
		        <th class="title"><span>Winnings</span></th>
                @foreach (var columnHeaderModel in Model.ColumnHeaderModels)
                {
                    @Html.Partial("Matrix/MatrixTableColumnHeader", columnHeaderModel)
                }
		    </tr>
        </thead>

        <tbody>
            @foreach (var rowModel in Model.RowModels)
            {
                @Html.Partial("Matrix/MatrixTableRow", rowModel)
            }
        </tbody>

    </table>
</div>