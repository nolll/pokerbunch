@using Web.Extensions
@model Web.Models.CashgameModels.Matrix.CashgameMatrixTableModel
  
<div class="matrix">
    <table class="table-list">
        <thead>
		    <tr>
			    <th class="table-list__column-header"></th>
                <th class="table-list__column-header"><span class="table-list__column-header__content">Player</span></th>
                <th class="table-list__column-header"><span class="table-list__column-header__content">Winnings</span></th>
                @foreach (var columnHeaderModel in Model.ColumnHeaderModels)
                {
                    @Html.RenderModel(columnHeaderModel)
                }
		    </tr>
        </thead>

        <tbody>
            @foreach (var rowModel in Model.RowModels)
            {
                @Html.RenderModel(rowModel)
            }
        </tbody>

    </table>
</div>