@using Web.Extensions
@using Web.Models.PageBaseModels
@model Web.Models.HomegameModels.Edit.EditBunchPageModel

@{
    Layout = PageLayout.OneColumn;
}

<div class="block gutter">
    <h1 class="page-heading">@Model.Heading</h1>
</div>
<div class="block gutter">
	
    @Html.RenderModel(Model.Errors)

    <form method="post">
		<fieldset>
			<p>
                @Html.LabelFor(model => model.Description, "Description", new { @class = "label" })
                @Html.TextBoxFor(model => model.Description, new { @class = "textfield" })
			</p>
			<p>
                @Html.LabelFor(model => model.CurrencySymbol, "Currency Symbol", new { @class = "label" })
                @Html.TextBoxFor(model => model.CurrencySymbol, new { @class = "textfield", data_hookup = "currency-form" })
			</p>
			<p>
			    @Html.LabelFor(model => model.CurrencyLayout, "Currency Layout", new { @class = "label" })
                @Html.DropDownListFor(model => model.CurrencyLayout, Model.CurrencyLayoutSelectItems, new {@id = "currencylayout"})
			</p>
		    <p>
		        @Html.LabelFor(model => model.TimeZone, "Timezone", new { @class = "label" })
		        @Html.DropDownListFor(model => model.TimeZone, Model.TimezoneSelectItems, new {@id = "timezone"})
		    </p>
		    <p>
		        @Html.LabelFor(model => model.DefaultBuyin, "Default buyin", new { @class = "label" })
		        @Html.TextBoxFor(model => model.DefaultBuyin, new { @class = "textfield" })
		    </p>
		    <p>
		        @Html.LabelFor(model => model.HouseRules, "House Rules", new { @class = "label" })
		        @Html.TextAreaFor(model => model.HouseRules, new { @class = "textfield" })
		    </p>
            @*
			<p class="checkbox-layout">
			    @Html.LabelFor(model => model.CashgamesEnabled, "Enable Cashgames", new { @class = "checkbox-label" })
                @Html.CheckBoxFor(model => model.CashgamesEnabled)
			</p>
		    <p class="checkbox-layout">
		        @Html.LabelFor(model => model.TournamentsEnabled, "Enable Cashgames", new { @class = "checkbox-label" })
		        @Html.CheckBoxFor(model => model.TournamentsEnabled)

		    </p>
		    <p class="checkbox-layout">
		        @Html.LabelFor(model => model.VideosEnabled, "Enable Cashgames", new { @class = "checkbox-label" })
		        @Html.CheckBoxFor(model => model.VideosEnabled)
		    </p>
            *@
		</fieldset>
		<div class="buttons">
            <button class="button button--action" type="submit">Save</button>
            <button class="button" data-hookup="cancel-button" data-cancel-url="@Model.CancelUrl">Cancel</button>
		</div>
	</form>
</div>