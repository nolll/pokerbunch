@using Web.Models.PageBaseModels
@model Web.Models.HomeModels.HomePageModel

@{
    Layout = PageLayout.TwoColumns;
}

<div class="block gutter">
	<h1>This is Poker Bunch</h1>
</div>
<div class="block gutter">
    @if (Model.IsLoggedIn)
    {
        <p>
            Poker Bunch helps you keep track of the results in your poker homegames.
            Please select one of your bunches, or <a href="@Model.AddBunchUrl">create a new bunch</a>.
        </p>
        <p>
            If you want to join an existing bunch, you will need an invitation from a bunch player.
        </p>
    }
    else
    {
        <p>
            Poker Bunch helps you keep track of the results in your poker homegames.
        </p>
        <p>
            <a href="@Model.LoginUrl">Sign in</a> if you already have an account, or <a href="@Model.RegisterUrl">register</a> to create a bunch and begin inviting players.
        </p>
    }
</div>

@section Aside2
{
    @if (Model.IsLoggedIn)
    {
        <div class="block gutter">
            <h1>Your Bunches</h1>
        </div>
        <div class="block gutter">
            @Html.Partial("BunchList/UserBunchList", Model.BunchList)
        </div>
        <div class="block gutter">
            @Html.Partial("~/Views/Navigation/AdminNavigation.cshtml", Model.AdminNav)
        </div>
    }
}
